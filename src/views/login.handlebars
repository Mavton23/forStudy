<!-- Css Links -->
<link rel="stylesheet" href="/css/auth.css">

<!-- Section -->
<main class="main">
  <div class="container">
    <div class="bg-img"></div>
      <div class="row">
        <div class="auth-form">
          
          <div class="section-title">
            <h1>Forstudy<span class="logo-dot"></span></h1>
            <p>Bem-vindo! Entre para continuar ou crie uma nova conta.</p>
          </div>
          
            {{#if error}}
              <div class="alert alert-danger">
                <p>{{error}}</p>
              </div>
            {{/if}}

            <form action="/auth/login" method="post">
                <div class="form-group">
                  <input type="email" name="email" placeholder="Email" class="form-control" required>
                </div>
                <div class="form-group">
                  <input type="password" name="password" placeholder="Palavra-passe" class="form-control" required>
                </div>
                <div class="submit">
                  <button type="submit">Entrar</button>
                </div>
                <div class="bottom">
                  <p class="bottom-item">Primeira vez no Forstudy? <a href="/auth/register"> Inscrever-se</a></p>
                </div>
            </form>
          
        </div>
      </div>
  </div>
</main>