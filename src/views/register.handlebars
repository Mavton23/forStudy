<!-- Css Links -->
<link rel="stylesheet" href="/css/auth.css">

<main class="main">
  <div class="container">
    <div class="bg-img"></div>
    <div class="row">
      <div class="auth-form">
        <div class="section-title">
          <h1>Forstudy<span class="logo-dot"></span></h1>
          <p>Bem-vindo! Cadastre-se e comece sua jornada de estudo conosco.</p>
        </div>
        <div class="register-intro">
          <p>
            Já tem uma conta? <a href="/auth/login">Faça login aqui</a>.
          </p>
        </div>
        {{#if error}}
          <div class="alert alert-danger">
            <p>{{error}}</p>
          </div>
        {{/if}}
        {{#if success}}
          <div class="alert alert-success">
            <p>{{success}}</p>
          </div>
        {{/if}}

        <form action="/auth/register" method="post">
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Nome do usuário" required><br>
          </div>
          <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Email" required><br>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Crie uma palavra-passe" required>
          </div>
          <div class="form-group">
            <input type="password" name="confpass" class="form-control" placeholder="Confirme a palavra-passe" required>
          </div>
          <div class="submit">
            <button type="submit">registar</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</main>